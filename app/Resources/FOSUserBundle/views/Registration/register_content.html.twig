{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">

    <div class="form-group">
        {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
        {{ form_errors(form.email) }}
        <div class="col-sm-8">{{ form_widget(form.email , {'attr': {'class': 'form-control'}}) }}</div>
    </div>

    <div class="form-group">
        {{ form_label(form.username, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
        {{ form_errors(form.username) }}
        <div class="col-sm-8">{{ form_widget(form.username , {'attr': {'class': 'form-control'}}) }}</div>
    </div>

    {% for plainPassword in form.plainPassword %}
        <div class="form-group">
            {{ form_label(plainPassword, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
            {{ form_errors(plainPassword) }}
            <div class="col-sm-8">{{ form_widget(plainPassword, { 'attr': {'class': 'form-control'} }) }}</div>
        </div>
    {% endfor %}

    <input class="btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" />
</form>
