{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit form-horizontal">
    <div class="form-group">
        {{ form_label(form.username, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
        {{ form_errors(form.username) }}
        <div class="col-sm-8">{{ form_widget(form.username , {'attr': {'class': 'form-control'}}) }}</div>
    </div>

    <div class="form-group">
        {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
        {{ form_errors(form.email) }}
        <div class="col-sm-8">{{ form_widget(form.email , {'attr': {'class': 'form-control'}}) }}</div>
    </div>

    <div class="form-group">
        {{ form_label(form.current_password, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
        {{ form_errors(form.current_password) }}
        <div class="col-sm-8">{{ form_widget(form.current_password , {'attr': {'class': 'form-control'}}) }}</div>
    </div>

    <input class="btn btn-success" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
</form>
