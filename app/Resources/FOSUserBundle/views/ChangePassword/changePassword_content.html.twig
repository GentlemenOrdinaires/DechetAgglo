{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_change_password">
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.current_password, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
        {{ form_errors(form.current_password) }}
        <div class="col-sm-8">{{ form_widget(form.current_password , {'attr': {'class': 'form-control'}}) }}</div>
    </div>

    {% for plainPassword in form.plainPassword %}
        <div class="form-group">
            {{ form_label(plainPassword, null, { 'label_attr': {'class': 'col-sm-4'} }) }}
            {{ form_errors(plainPassword) }}
            <div class="col-sm-8">{{ form_widget(plainPassword, { 'attr': {'class': 'form-control'} }) }}</div>
        </div>
    {% endfor %}

    <input class="btn btn-success" type="submit" value="{{ 'change_password.submit'|trans }}" />
</form>
