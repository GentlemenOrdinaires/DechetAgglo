{% extends 'GYGAppBundle::_partials/map.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/gygapp/js/colorPicker/css/colorpicker.css') }}" />
{% endblock %}

{% block javascripts_header %}
    {{ parent() }}
    <script src="{{ asset('bundles/gygapp/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/gygapp/js/colorPicker/js/colorpicker.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    <h2>{{ formTitle }}</h2>

    <button id="btn-map-confirm">Confirmer le trajet</button>

    <div class="formulaire col-md-6">
        <form action="{{ formAction }}"  method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
        </form>
    </div>

    {{ parent() }}

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        (function() {
            var startOption = {
                initLat: 581647.9745650819,
                initLong: 5813280.860704543,
                initZoom: 17,
                editable: true,
                drawType: DrawOnMap.drawingOptions.polygon,
                singleDrawMode: true
            };
            var map;
            var drawingOverlay;

            drawingOverlay = DrawOnMap.initialize(startOption, map);

            $('#btn-map-confirm').on('click', function(){
                $('#gyg_appbundle_trajet_geojson').val(DrawOnMap.getData(drawingOverlay));
            });
        })();
    </script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#gyg_appbundle_trajet_couleur').ColorPicker({
                onSubmit: function(hsb, hex, rgb, el) {
                    $(el).val(hex);
                    $(el).ColorPickerHide();
                },
                onBeforeShow: function () {
                    $(this).ColorPickerSetColor(this.value);
                }
            })
                    .bind('keyup', function(){
                        $(this).ColorPickerSetColor(this.value);
                    });
        });
    </script>

{% endblock %}